{% extends 'base.html.twig' %}

{% block title %}Hello CurrencyController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="col-md-12">
            <div class="col-md-6 weather-form">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.city) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.country) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6 weather-results">
                {% if weatherData %}
                    {% if weatherData.error %}
                        <div class="mb-3">
                            <h4>Error: {{ weatherData.message }}</h4>
                        </div>
                    {% endif %}
                    <div class="mb-3">
                        <h4>City: {{ weatherData.city }}</h4>
                    </div>
                    <div class="mb-3">
                        <h4>Temperature: {{ weatherData.avgTemp }}</h4>
                    </div>
                {% endif %}
            </div>

            <div class="col-md-6 weather-last-results">
                <h4>Resent Search</h4>
                {% for last in lastSearched %}
                    <div class="mb-3">
                        <h4>City: {{ last.city }} Temp: {{ last.temp }} Search time: {{ last.insertTime|date }}</h4>
                    </div>
                {% endfor %}
            </div>
        </div>


    </div>
{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-grid.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet"/>
{% endblock %}
